{{ form_start(form) }}
<div class="form-inline">
    <div class="form-group">
        <div class="col-md-3">
            {{ form_row(form.maxPrice) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3">
            {{ form_row(form.minSurface) }}
        </div>
    </div>

    <div class="col-md-3">
        {{ form_row(form.entityOption) }}
    </div>

    {{ form_rest(form) }}
    <button class="col-md-3 btn btn-primary">
        {{ button|default('...') }}
    </button>
</div>
{{ form_end(form) }}