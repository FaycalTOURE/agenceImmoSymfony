{% extends 'base.html.twig' %}
{% block title 'Bien' %}
{% block body %}
    <h1>{{ property.title }}</h1>
    <p> {{ property.description }}</p>
    <div class="container">
        <div class="row">
            {% for message in app.flashes('success') %}
                <p class="alert alert-success">
                    {{ message }}
                </p>
            {% endfor %}
            <div class="col-12 col-md-4">
                <div>
                    {% if property.filename %}
                        <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('medium') }}" alt="{{ property.filename }}">
                    {% else %}
                        <img src="{{ '/images/proprieties/placeholder.jpg' | imagine_filter('medium') }}" alt="">
                    {% endif %}
                </div>
                {% if property.entityOption|length %}
                    <div class="my-5 col-12 col-md-6 ml-0 pl-0">
                        <ul>
                            {% for option in property.entityOption %}
                                <li class="badge badge-pill badge-secondary">{{ option.name }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
            </div>
            <div class="col-12 col-md-8 d-flex justify-content-between flex-column">
                <div>
                    <div>
                        <p class="d-inline-block">{{ property.city }}</p>,
                        <p class="badge badge-pill badge-success d-inline-block vertical-align-center">
                            Prix: {{ property.formatedPrice }} €
                        </p>
                    </div>
                    <div>
                        <table class="table">
                            <tr>
                                <td>surface</td>
                                <td>{{ property.surface }}</td>
                            </tr>
                            <tr>
                                <td>Pièces</td>
                                <td>{{ property.romms }}</td>
                            </tr>
                            <tr>
                                <td>Chambres</td>
                                <td>{{ property.bedrooms }}</td>
                            </tr>
                            <tr>
                                <td>Etage</td>
                                <td>{{ property.floor }}</td>
                            </tr>

                            <tr>
                                <td>surface</td>
                                <td>{{ property.surface }}</td>
                            </tr>
                            <tr>
                                <td>Pièces</td>
                                <td>{{ property.romms }}</td>
                            </tr>
                            <tr>
                                <td>Chambres</td>
                                <td>{{ property.bedrooms }}</td>
                            </tr>
                            <tr>
                                <td>Etage</td>
                                <td>{{ property.floor }}</td>
                            </tr>
                            <tr>
                                <td>Code Postal</td>
                                <td>{{ property.postalCode }}</td>
                            </tr>
                            <tr>
                                <td>Chauffage</td>
                                <td>{{ property.HeadInfos }}</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-4"> {{ form_row(form.firstName) }}</div>
                <div class="col-md-4">{{ form_row(form.lastName) }}</div>
            </div>

            <div class="row">
                <div class="col-md-4"> {{ form_row(form.phone) }}</div>
                <div class="col-md-4"> {{ form_row(form.email) }}</div>
            </div>

            <div class="row">
                <div class="col-md-12">{{ form_row(form.message) }}</div>
            </div>

            {{ form_rest(form) }}
            <button class="btn btn-primary">{{ button|default('Contacter l\'agence') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}